---
import { Image } from "astro:assets";
import diagramOne from "../images/diagram_1.jpg";
import diagramTwo from "../images/diagram_2.jpg";
import diagramThree from "../images/diagram_3.jpg";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.currentLocale as string);
const t = useTranslations(lang);
---

<section class="mx-auto max-w-7xl my-16 md:px-10 md:py-20">
	<h2 class="font-bold md:text-5xl my-5 text-center">{t('tech.title')}</h2>
	<p class="text-s sm:text-base text-center">
		{t('tech.text')}
	</p>

	<div class="grid lg:grid-cols-3 items-center mt-20 gap-5">
		<div class="p-10 rounded-md border-t-8 border-primary shadow-md">
			<h2 class="text-2xl font-bold">{t('tech.1.title')}</h2>
			<p class="text-sm text-gray-500 sm:text-base">
				{t('tech.1.text.2')}
				<br /><br />
				{t('tech.1.text.2')}
				<br /><br />
				{t('tech.1.text.3')}
			</p>
		</div>
		<div class="rounded-3xl bg-white p-2 shadow-2xl col-span-2">
			<p>
				<Image
					src={diagramOne}
					alt="img"
					class="h-full w-full object-cover overflow-hidden"
				/>
			</p>
		</div>
	</div>

	<div class="grid lg:grid-cols-3 items-center mt-32 gap-5">
		<div class="rounded-3xl bg-white p-2 shadow-2xl col-span-2">
			<p>
				<Image
					src={diagramTwo}
					alt="img"
					class="h-full w-full object-cover overflow-hidden"
				/>
			</p>
		</div>

		<div class="p-10 rounded-md border-t-8 border-primary shadow-md">
			<h2 class="text-2xl font-bold">{t('tech.2.title')}</h2>
			<p class="text-sm text-gray-500 sm:text-base">
				{t('tech.2.text.1')}
				<br /><br />
				{t('tech.2.text.2')}
				<br /><br />
				{t('tech.2.text.3')}
			</p>
		</div>
	</div>

	<div class="grid lg:grid-cols-3 items-center mt-32 gap-2 rounded-2xl mb-2">
		<div class="p-10 rounded-md border-t-8 border-primary shadow-md">
			<h2 class="text-2xl font-bold">{t('tech.3.title')}</h2>
			<p class="text-sm text-gray-500 sm:text-base">
				{t('tech.3.text.1')}
				<br /><br />
				{t('tech.3.text.2')}
			</p>
		</div>

		<div class="rounded-3xl text-center col-span-2 py-3">
			<div class="grid grid-cols-3 gap-2">
				<div class="shadow-md rounded-md p-5">
					<h2 class="font-bold">{t('tech.4.1.title')}</h2>
					<p class="text-sm text-gray-500 sm:text-base">
						{t('tech.4.1.text')}
					</p>
				</div>
				<div class="shadow-md rounded-md p-5">
					<h2 class="font-bold">{t('tech.4.2.title')}</h2>
					<p class="text-sm text-gray-500 sm:text-base">
						{t('tech.4.2.text')}
					</p>
				</div>
				<div class="shadow-md rounded-md p-5">
					<h2 class="font-bold">{t('tech.4.3.title')}</h2>
					<p class="text-sm text-gray-500 sm:text-base">
						{t('tech.4.3.text')}
					</p>
				</div>
			</div>
			<div class="grid grid-cols-2 mt-5 gap-2">
				<div class="shadow-md rounded-md p-5">
					<h2 class="font-bold">{t('tech.4.4.title')}</h2>
					<p class="text-sm text-gray-500 sm:text-base">
						{t('tech.4.4.text')}
					</p>
				</div>
				<div class="shadow-md rounded-md p-5">
					<h2 class="font-bold">{t('tech.4.5.title')}</h2>
					<p class="text-sm text-gray-500 sm:text-base">
						{t('tech.4.5.text')}
					</p>
				</div>
			</div>
		</div>
	</div>

	<div class="rounded-3xl bg-white p-2 shadow-2xl">
		<p>
			<Image
				src={diagramThree}
				alt="img"
				class="h-full w-full object-cover overflow-hidden"
			/>
		</p>
	</div>
</section>
