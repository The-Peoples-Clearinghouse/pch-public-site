---
import BillIcon from "../../icons/BillIcon.astro";
import RocketIcon from "../../icons/RocketIcon.astro";
import CommentsIcon from "../../icons/CommentsIcon.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.currentLocale as string);
const t = useTranslations(lang);
---

<section
  class="mb-20 lg:mb-40 bg-white py-24 sm:py-32 flex flex-col items-center justify-center gap-20"
>
  <h2
    class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl text-center"
  >
  {t('home.goals.title')}
  </h2>
  <div class="container mx-auto px-16 lg:px-10 lg:pl-14 flex flex-col lg:flex-row gap-12">
    <div class="basis-1/3">
      <p class="text-base font-semibold leading-7 text-gray-900">
        <CommentsIcon width="2.5rem" height="2.5rem" />
        {t('home.goals.1.title')}
      </p>
      <p class="mt-2 text-base leading-7 text-gray-900">
        {t('home.goals.1.text')}
      </p>
    </div>

    <div class="basis-1/3">
      <p class="text-base font-semibold leading-7 text-gray-900">
        <BillIcon width="2.5rem" height="2.5rem" />
        {t('home.goals.2.title')}
      </p>
      <p class="mt-2 text-base leading-7 text-gray-900">
        {t('home.goals.2.text')}
      </p>
    </div>

    <div class="basis-1/3">
      <p class="text-base font-semibold leading-7 text-gray-900">
        <RocketIcon width="2.5rem" height="2.5rem" />
        {t('home.goals.3.title')}
      </p>
      <p class="mt-2 text-base leading-7 text-gray-900">
        {t('home.goals.3.text')}
      </p>
    </div>
  </div>
</section>
